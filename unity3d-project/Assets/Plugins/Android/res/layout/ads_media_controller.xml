<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/mctrlBottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#c0303030"
        android:padding="5dp">
	    
	    <SeekBar android:id="@+id/mctrlProgress"
	        android:focusable="false"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        />
	    
	    <TextView
	        android:id="@+id/mctrlPlayTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/mctrlProgress"
	        android:textSize="16sp"
	        android:textStyle="bold"
	        android:text="00:00:00 / 00:00:00"/>
	    
	
	</RelativeLayout>
	    
    
    <RelativeLayout android:id="@+id/mctrlTopPanel"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:background="#c0303030">
    
        <TextView
            android:id="@+id/mctrlTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="6dp"
            android:textSize="18sp"
            android:textStyle="bold" />

    	<Button
    	    android:id="@+id/mctrlCloseButton"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentRight="true"
    	    android:text="Close" />

    </RelativeLayout>

</RelativeLayout>
